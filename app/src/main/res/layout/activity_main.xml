<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/send_bubble"
                    android:padding="12dp"
                    android:text="Hi leo.What's up???\nI need a new logo for group"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/send_bubble"
                    android:padding="10dp"
                    android:text="simple.minimal and beautiful"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/receive_bubble"
                    android:padding="10dp"

                    android:text="Ok, Ill start next week.\nSend me documents today"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/send_bubble"
                    android:padding="10dp"
                    android:text="Oh,That's great 😍"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:layout_gravity="bottom"
                android:padding="10dp"/>
        </LinearLayout>




        <!--  <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="">

          </ImageButton>-->




    </LinearLayout>

</LinearLayout>